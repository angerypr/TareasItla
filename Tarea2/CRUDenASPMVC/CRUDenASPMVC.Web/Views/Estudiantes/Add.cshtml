@model CRUDenASPMVC.Web.Models.ModeloVistaEstudiante

<h1> Añadir Estudiante </h1>

<form method="post">
    <div class="mt-3"> 
        <label class="form-label"> Nombre </label>
        <input type="text" class="form-control" asp-for="Nombre"/>
    </div>

    <div class="mt-3">
         <label class="form-label"> Email </label>
         <input type="email" class="form-control" asp-for="Email"/>
    </div>

    <div class="mt-3">
         <label class="form-label"> Teléfono </label>
         <input type="text" class="form-control" asp-for="Telefono" />
    </div>

    <div class="mt-3">
         <input type="checkbox" class="form-check-input" id="Suscrito" asp-for="Suscrito"/>
         <label class="form-check-label" for="Suscrito"> Suscrito </label>
    </div>

    <div class="mt-3">
         <button type="submit" class="btn btn-primary">Guardar</button>
    </div>
</form>